{
    "[python]": {
        "editor.rulers": [
            79,
            120
        ],
        "editor.formatOnSave": true,
    },
    "[javascriptreact]": {
        "editor.rulers": [
            85,
            120
        ],
        "editor.formatOnSave": true,
    },
    "[jsonc]": {
        "editor.formatOnSave": true
    },
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.wordWrap": "on",
        "editor.renderWhitespace": "all",
        // "editor.acceptSuggestionOnEnter": "off"
    },
    "[go]": {
        "editor.rulers": [
            85,
            120
        ]
    },
    "files.associations": {
        "*.js": "javascriptreact"
    },
    "breadcrumbs.enabled": true,
    "explorer.openEditors.visible": 0,
    "editor.renderWhitespace": "all",
    "editor.smoothScrolling": true,
    // "editor.hover.enabled": false,
    "editor.hover.delay": 700,
    "editor.fontFamily": "Source Code Pro, Menlo, Monaco, 'Courier New', monospace",
    "window.zoomLevel": -1,
    "editor.gotoLocation.multipleDeclarations": "gotoAndPeek",
    // minimap
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.minimap.maxColumn": 200,
    // cursor
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorWidth": 1,
    "editor.cursorStyle": "line",
    // color
    "workbench.colorCustomizations": {
        // Selection
        "editor.selectionBackground": "#e63010",
        // "editor.selectionHighlightBackground": "#559c3f",
        "editor.selectionHighlightBorder": "#e63010",
        // "editor.inactiveSelectionBackground": "#e63010",
        // Find matches
        "editor.findMatchBackground": "#239421",
        "editor.findMatchBorder": "#ffffff",
        "editor.findMatchHighlightBackground": "#559c3faf",
        "editor.rangeHighlightBackground": "#155214",
        // "editor.lineHighlightBackground": "#1e1e1e",
        // "editor.lineHighlightBackground": "#3b3b3b",
        "editor.lineHighlightBorder": "#00ff2a57",
        // "editorBracketMatch.background": "#e63010",
        // "editorBracketMatch.border": "#e63010",
    },
    // Go settings
    "go.enableCodeLens": {
        "references": false,
        "runtest": true
    },
    "go.lintTool": "staticcheck",
    // "go.lintTool": "golint",
    // "go.lintOnSave": "workspace",
    // "go.liveErrors": {
    //     "enabled": true,
    //     "delay": 500
    // },
    // "go.alternateTools": {},
    // Go settings work
    "go.formatTool": "goimports",
    "go.useLanguageServer": true,
    "go.alternateTools": {
        "go-langserver": "gopls",
    },
    "go.languageServerExperimentalFeatures": {
        // "format": true,
        // "autoComplete": true
    },
    "go.delveConfig": {
        "dlvLoadConfig": {
            "followPointers": true,
            "maxVariableRecurse": 1,
            "maxStringLen": 64,
            "maxArrayValues": 64,
            "maxStructFields": -1
        },
        "apiVersion": 2,
        "showGlobalVariables": true
    },
    // Extensions settings
    "vsicons.dontShowNewVersionMessage": true,
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "extensions.ignoreRecommendations": true,
    "todo-tree.highlights.enabled": true,
    "todo-tree.tree.showScanModeButton": false,
    // "emmet.extensionsPath": "",
    "workbench.iconTheme": "vscode-icons",
    "peacock.favoriteColors": [
        {
            "name": "Angular Red",
            "value": "#b52e31"
        },
        {
            "name": "Auth0 Orange",
            "value": "#eb5424"
        },
        {
